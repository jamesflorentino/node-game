html
  block head
    title HTML5 prototype game yo!
    link(rel="icon", type="image/png", href="favico.png")
    link(rel="stylesheet", href="stylesheets/site.css")
  block body
    #game
      canvas Your browser doesn't support canvas. Download Chrome, Firefox, or Safari to play this game.

      #console
        ul.logs

      #unit-menu.hidden
        .move Move
        .act Act
        .skip Skip

      #cancel-button.hidden
        .button Cancel
        .icon

      #confirm-action.hidden
        .confirm.button Confirm
        .cancel.button Cancel

      #top-vignette.hidden

      #curtain
        .text Connecting...
        .top.cover
        .bottom.cover
